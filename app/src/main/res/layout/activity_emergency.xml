<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE3E3"
    tools:context="com.example.android.app_ui.Emergency">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Emergency Contact 1"
        android:id="@+id/emer1"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Emergency Contact 2"
        android:id="@+id/emer2"
        android:layout_margin="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Emergency Contact 3"
        android:id="@+id/emer3"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Emergency Contact 4"
        android:id="@+id/emer4"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Emergency Contact 5"
        android:id="@+id/emer5"
        android:layout_margin="10dp"/>



</LinearLayout>
