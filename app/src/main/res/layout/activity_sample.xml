<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#fefefe"
tools:context="com.example.android.app_ui.SampleActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/llMainPage"
        android:id="@+id/llOne"
        android:padding="2dp"
        android:gravity="center"
        android:elevation="8dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/shield"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            style="@style/mainPage_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:layout_alignParentBottom="true"
            style="@style/txtMainPage"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llTwo"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:padding="2dp"
        android:elevation="8dp"
        style="@style/llMainPage"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/shield"
            android:adjustViewBounds="true"
            android:padding="12dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            style="@style/mainPage_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hit Map"
            android:layout_alignParentBottom="true"
            style="@style/txtMainPage"/>
    </RelativeLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llThree"
        android:elevation="8dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:padding="2dp"
        style="@style/llMainPage"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/button3"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/shield"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            style="@style/mainPage_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track"
            android:layout_alignParentBottom="true"
            style="@style/txtMainPage"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llFour"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:padding="2dp"
        android:elevation="8dp"
        style="@style/llMainPage"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/shield"
            android:adjustViewBounds="true"
            android:padding="12dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            style="@style/mainPage_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:layout_alignParentBottom="true"
            style="@style/txtMainPage"/>
    </RelativeLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="2dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llFive"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        style="@style/llMainPage"
        android:elevation="8dp"
        android:padding="2dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/button5"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/shield"
            android:adjustViewBounds="true"
            android:padding="12dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            style="@style/mainPage_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Self-defense videos"
            android:layout_alignParentBottom="true"
            style="@style/txtMainPage"/>
    </RelativeLayout>

</LinearLayout>

</LinearLayout>
